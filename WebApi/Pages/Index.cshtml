@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0 display-6">Products inventory</h1>
        <span class="badge bg-primary fs-6">
            @((Model.Products?.Count ?? 0)) product@(Model.Products?.Count == 1 ? "" : "s")
        </span>
    </div>

    <div class="row g-4">
        <div class="col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Add new Product</h5>
                    <p class="text-muted mb-3 small">Create a product with price and available amount.</p>

                    <form method="post" asp-page-handler="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-3">
                            @if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger alert-sm mb-2" role="alert">
                                    <strong>There are validation errors.</strong> Please check the fields below.
                                </div>
                            }
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewProduct.Name" class="form-label">Name</label>
                            <input asp-for="NewProduct.Name" class="form-control" placeholder="Product name" aria-required="true" />
                            <div class="text-danger small mt-1">
                                <span asp-validation-for="NewProduct.Name"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewProduct.Price" class="form-label">Price</label>
                            <div class="input-group">
                                <input asp-for="NewProduct.Price" type="number" step="0.01" min="0" class="form-control" aria-describedby="priceHelp" />
                                <span class="input-group-text">€</span>
                            </div>
                            <small id="priceHelp" class="form-text text-muted">Enter price in EUR (e.g. 9.99).</small>
                            <div class="text-danger small mt-1">
                                <span asp-validation-for="NewProduct.Price"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewProduct.Amount" class="form-label">Amount</label>
                            <input asp-for="NewProduct.Amount" type="number" step="1" min="0" class="form-control" />
                            <div class="text-danger small mt-1">
                                <span asp-validation-for="NewProduct.Amount"></span>
                            </div>
                        </div>

                        <div class="d-flex">
                            <button type="submit" class="btn btn-success me-2">Create</button>
                            <button type="reset" class="btn btn-outline-secondary">Clear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">Products List</h5>

                    @if (Model.Products?.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Amount</th>
                                        <th scope="col" class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var p in Model.Products)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@p.Name</td>
                                            <td>@p.Price.ToString("C")</td>
                                            <td>@p.Amount</td>
                                            <td class="text-end">
                                                <form method="post" asp-page-handler="Delete" class="d-inline">
                                                    <input type="hidden" name="id" value="@p.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <div class="fs-4 mb-2">No Products Available <span aria-hidden="true">😕</span></div>
                            <p class="text-muted mb-0">There are currently no products. Use the form to add new items.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>